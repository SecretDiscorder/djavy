BoxLayout:

    orientation: 'vertical'
    Button:
        text: 'Start Django Server'
        size_hint_y: None
        height: '50dp'
        on_press: root.start_django_server(self)

    Button:
        text: 'Stop Django Server'
        size_hint_y: None
        height: '50dp'
        on_press: root.stop_django_server(self)

